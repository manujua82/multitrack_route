<div class="row flex-center py-5">
    <div class="col-xl-4">

        {{ form_start(form, {'attr': { 'novalidate': 'novalidate', 'class': "row g-3 mb-6 needs-validation"}}) }}

        <div>
            {{ form_errors(form)}}
        </div>

        <div class="col-sm-6 col-md-12">
            <div class="form-floating"> 
                {{ form_widget(form.Number, { 'attr': { 'class': 'form-control', 'id':'inputNumber', 'type':'text', 'placeholder': 'Number'|trans }}) }}
                {{ form_label(form.Number,  'Number'|trans, {'label_attr': {'class': 'form-label', 'for': 'inputNumber'}}) }}
            </div>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.driver, { 'attr': { 'class': 'form-select', 'id':'inputDriver', 'data-choices':'data-choices', 'data-options':'{"removeItemButton":true,"placeholder":true}' }}) }}
                {{ form_label(form.driver,  'Driver'|trans, {'label_attr': {'for': 'inputDriver'}}) }}
            </div>
        </div>
           
        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.depot, { 'attr': { 'class': 'form-select', 'id':'inputDepot', 'data-choices':'data-choices', 'data-options':'{"removeItemButton":true,"placeholder":true}'}}) }}
                {{ form_label(form.depot, 'Depot/Ship from'|trans , {'label_attr': {'for': 'inputDepot'}}) }}
            </div>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.carrier, { 'attr': { 'class': 'form-select', 'id':'inputCarier', 'data-choices':'data-choices', 'data-options':'{"removeItemButton":true,"placeholder":true}' }}) }}
                {{ form_label(form.carrier, 'Carrier'|trans , {'label_attr': {'for': 'inputCarier'}}) }}
            </div>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.plt, { 'attr': { 'class': 'form-control', 'id':'inputPlt', 'type':'text', 'placeholder': 'Plt/Pkg'|trans }}) }}
                {{ form_label(form.plt, 'Plt/Pkg'|trans , {'label_attr': {'for': 'inputPlt'}}) }}
            </div>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.weight, { 'attr': { 'class': 'form-control', 'id':'inputWeight', 'type':'text', 'placeholder': 'Weight'|trans }}) }}
                {{ form_label(form.weight, 'Weight'|trans , {'label_attr': {'for': 'inputWeight'}}) }}
            </div>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="form-floating"> 
                {{ form_widget(form.volume, { 'attr': { 'class': 'form-control', 'id':'inputVolume', 'type':'text', 'placeholder': 'Volume'|trans }}) }}
                {{ form_label(form.volume, 'Volume'|trans , {'label_attr': {'for': 'inputVolume'}}) }}
            </div> 
        <div> 
        
        <br/>
        
        <div class="col-12 gy-6">
            <div class="row g-3 justify-content-end">
                <div class="col-auto">
                    <button class="btn btn-phoenix-primary px-5" onclick="location.href='{{ path('app_vehicle') }}';">{{ 'Cancel' |trans }}</button>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary px-5">{{ 'Save' |trans }}</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>