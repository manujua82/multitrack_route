<table class="table table-sm fs--1 mb-0">
    <thead>
        <tr>
            <th class="sort align-middle" scope="col" data-sort="name" style="width:10%; min-width:200px;">{{ 'Name' |trans }}</th>
            <th class="sort align-middle" scope="col" data-sort="address" style="width:20%;  min-width:200px;">{{ 'Address' |trans }}</th>
            <th class="sort align-middle" scope="col"  style="width:10%;  min-width:200px;">{{ 'Latitude' |trans }}</th>
            <th class="sort align-middle" scope="col"  style="width:10%;  min-width:200px;">{{ 'Longitude' |trans }}</th>
            <th class="align-middle" scope="col" style="width:20%;  min-width:200px;">{{ 'Actions' |trans }}</th>
        </tr>
    </thead>
    
    <tbody class="list" id="warehouse-table-body">
        {% for entity in entities %}
            <tr class="hover-actions-trigger btn-reveal-trigger position-static">
                <td class="name align-middle white-space-nowrap">{{ entity.name }}</td>
                <td class="address align-middle white-space-nowrap">{{ entity.fullAddress }}</td>
                <td class="latitude align-middle white-space-nowrap">{{ entity.latitude }}</td>
                <td class="longitude align-middle white-space-nowrap">{{ entity.longitude }}</td>
    
                <td class="actions align-middle white-space-nowrap">
                    <a class="m-2" href="{{ path('app_warehouse_edit', { warehouseEntity: entity.id }) }}" data-original-title="Edit" data-toggle="tooltip">
                        <i class="fa fa-pencil"></i>
                    </a> 
                    <a href="{{ path('app_warehouse_delete', { warehouseEntity: entity.id }) }}" data-original-title="Remove" data-toggle="tooltip">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>