<table class="table table-sm fs--1 mb-0">
    <thead>
        <tr>
            <th class="sort align-middle" scope="col" data-sort="code" style="width:10%; min-width:200px;">{{ 'Code' |trans }}</th>
            <th class="sort align-middle" scope="col" data-sort="name" style="width:30%; min-width:200px;">{{ 'Name' |trans }}</th>
            <th class="align-middle pe-3" scope="col" style="width:10%; min-width:200px;">{{ 'Unit' |trans }}</th>
            <th class="align-middle" scope="col" style="width:30%;  min-width:200px;">{{ 'Barcode' |trans }}</th>
            <th class="align-middle" scope="col" style="width:30%;  min-width:200px;">{{ 'Price' |trans }}</th>
            <th class="align-middle" scope="col" style="width:20%;  min-width:200px;">{{ 'Actions' |trans }}</th>
        </tr>
    </thead>
    
    <tbody class="list" id="members-table-body">
        {% for entity in entities %}
            <tr class="hover-actions-trigger btn-reveal-trigger position-static">
                <td class="code align-middle white-space-nowrap">{{ entity.code }}</td>
                <td class="name align-middle white-space-nowrap">{{ entity.name }}</td>
                <td class="unit align-middle white-space-nowrap">{{ entity.unit }}</td>
                <td class="barcode align-middle white-space-nowrap">{{ entity.barcode }}</td>
                <td class="barcode align-middle white-space-nowrap">{{ entity.price }}</td>
                <td class="actions align-middle white-space-nowrap">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_item_edit', { itemEntity: entity.id }) }}" data-original-title="Edit" data-toggle="tooltip">
                        <i class="fa fa-pencil"></i>
                    </a> 
                    <a class="btn btn-danger btn-sm" href="{{ path('app_item_delete', { itemEntity: entity.id }) }}" data-original-title="Remove" data-toggle="tooltip">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>