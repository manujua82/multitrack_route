<div class="mx-n4 mx-lg-n6 px-4 px-lg-6 mb-9 bg-white border-y border-300 mt-2 position-relative top-1">
    <div class="table-responsive scrollbar ms-n1 ps-1">

        <table class="table table-sm fs--1 mb-0">
            <thead>
                <tr>
                    <th class="sort align-middle" scope="col" data-sort="code" style="width:10%; min-width:200px;">{{ 'Code' |trans }}</th>
                    <th class="sort align-middle" scope="col" data-sort="name" style="width:10%; min-width:200px;">{{ 'Name' |trans }}</th>
                    <th class="sort align-middle pe-3" scope="col" data-sort="contact" style="width:15%; min-width:200px;">{{ 'Contact' |trans }}</th>
                    <th class="sort align-middle" scope="col" data-sort="email" style="width:15%;  min-width:200px;">{{ 'Email' |trans }}</th>
                    <th class="sort align-middle" scope="col" style="width:10%;">{{ 'Phone' |trans }}</th>
                    <th class="align-middle" scope="col"  style="width:10%;  min-width:200px;">{{ 'Time from' |trans }}</th>
                    <th class="align-middle" scope="col"  style="width:10%;  min-width:200px;">{{ 'Time Until' |trans }}</th>
                    <th class="align-middle" scope="col"  style="width:10%;  min-width:200px;">{{ 'Priority' |trans }}</th>
                    <th class="align-middle" scope="col"                    style="width:10%;  min-width:200px;">{{ 'Actions' |trans }}</th>
                </tr>
            </thead>
            
            <tbody class="list" id="members-table-body">
                {% if customers.getTotalItemCount > 0 %}
                    {% for entity in customers %}
                        <tr class="hover-actions-trigger btn-reveal-trigger position-static">
                            <td class="code align-middle white-space-nowrap">{{ entity.code }}</td>
                            <td class="name align-middle white-space-nowrap">{{ entity.name }}</td>
                            <td class="contact align-middle white-space-nowrap">{{ entity.contact }}</td>
                            <td class="email align-middle white-space-nowrap"><a class="fw-semi-bold" href="mailto:{{ entity.email }}">{{ entity.email }}</td>
                            <td class="phone align-middle white-space-nowrap">{{ entity.phone }}</td>
                            <td class="align-middle white-space-nowrap">{{ entity.timeFrom | date('h:m:s') }}</td>
                            <td class="align-middle white-space-nowrap">{{ entity.timeUntil | date('h:m:s') }}</td>
                            
                            <td class="align-middle white-space-nowrap">
                                <span class="badge badge-phoenix fs--2 badge-phoenix-secondary">
                                    <span class="badge-label">{{ entity.priority }}</span>
                                </span>
                            </td>

                            <td class="actions align-middle white-space-nowrap">
                                <a class="m-2" href="{{ path('app_customer_edit', { customerEntity: entity.id }) }}" data-original-title="Edit" data-toggle="tooltip">
                                    <i class="fa fa-pencil"></i>
                                </a> 
                                <a href="{{ path('app_customer_delete', { customerEntity: entity.id }) }}" data-original-title="Remove" data-toggle="tooltip">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                            {# TODO: MESSAGE FOR NO ITEMS #}
                {% endif %}
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-3">
            {{ knp_pagination_render(customers) }}
        </div>
    </div>
</div>