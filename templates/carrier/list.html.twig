<table class="table table-sm fs--1 mb-0">
    <thead>
        <tr>
            <th class="sort align-middle" scope="col" data-sort="code" style="width:10%; min-width:200px;">{{ 'Code' |trans }}</th>
            <th class="sort align-middle" scope="col" data-sort="name" style="width:20%; min-width:200px;">{{ 'Name' |trans }}</th>
            <th class="sort align-middle pe-3" scope="col" data-sort="contact" style="width:20%; min-width:200px;">{{ 'Contact' |trans }}</th>
            <th class="sort align-middle" scope="col" data-sort="email" style="width:20%;  min-width:200px;">{{ 'Email' |trans }}</th>
            <th class="sort align-middle" scope="col" style="width:15%;">{{ 'Phone' |trans }}</th>
            <th class="align-middle" scope="col"                    style="width:20%;  min-width:200px;">{{ 'Actions' |trans }}</th>
        </tr>
    </thead>
    
    <tbody class="list" id="members-table-body">
        {% for entity in entities %}
            <tr class="hover-actions-trigger btn-reveal-trigger position-static">
                <td class="code align-middle white-space-nowrap">{{ entity.code }}</td>
                <td class="name align-middle white-space-nowrap">{{ entity.name }}</td>
                <td class="contact align-middle white-space-nowrap">{{ entity.contact }}</td>
                <td class="email align-middle white-space-nowrap"><a class="fw-semi-bold" href="mailto:{{ entity.email }}">{{ entity.email }}</td>
                <td class="phone align-middle white-space-nowrap">{{ entity.phone }}</td>
                <td class="actions align-middle white-space-nowrap">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_carrier_edit', { carrierEntity: entity.id }) }}" data-original-title="Edit" data-toggle="tooltip">
                        <i class="fa fa-pencil"></i>
                    </a> 
                    <a class="btn btn-danger btn-sm" href="{{ path('app_carrier_delete', { carrierEntity: entity.id }) }}" data-original-title="Remove" data-toggle="tooltip">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>