<div class="row flex-center py-5">
    <div class="col-xl-4">
        <div class="card mb-2">
            <div class="card-body">
                
                <div class="d-flex align-items-center mb-2">
                    <h3>{{ 'Driver' |trans }}</h3>
                </div>

                {{ form_start(form, {'attr': { 'novalidate': 'novalidate', 'class': "row g-3 mb-6 needs-validation"}}) }}
                <div class="col-sm-6 col-md-6">
                    <div class="form-check mb-3">
                        {{ form_label(form.active,  'Active'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputActive'}}) }}
                        {{ form_widget(form.active, { 'attr': { 'class': 'form-check-input', 'id':'floatingInputActive', 'type':'checkbox'}}) }}
                        {{ form_errors(form.active) }}
                    </div>
                </div> 

                <div class="row g-2">
                    <div class="col-sm-6 col-md-12">
                        {{ form_label(form.name,  'Full name'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputName'}}) }}
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'id':'floatingInputName', 'type':'text', 'placeholder': 'Full name'|trans }}) }}
                        <div class="invalid-feedback" style="display: block !important">{{ form_errors(form.name) }}</div>
                    </div>

                    <div class="col-sm-6 col-md-12">
                        {{ form_label(form.email,  'Email'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputEmail'}}) }}
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'id':'floatingInputEmail', 'type':'text', 'placeholder': 'Email'|trans }}) }}
                        <div class="invalid-feedback" style="display: block !important">{{ form_errors(form.email) }}</div>
                    </div>

                    <div class="col-sm-6 col-md-12">
                        {{ form_label(form.address,  'Address'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputAddress'}}) }}
                        {{ form_widget(form.address, { 'attr': { 'class': 'form-control', 'id':'floatingInputAddress', 'type':'text', 'placeholder': 'Address'|trans }}) }}
                        <div class="invalid-feedback" style="display: block !important">{{ form_errors(form.address) }}</div>
                    </div>
                    
                    <div class="col-sm-6 col-md-6">
                        {{ form_label(form.phone,  'Phone'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputPhone'}}) }}
                        {{ form_widget(form.phone, { 'attr': { 'class': 'form-control', 'id':'floatingInputPhone', 'type':'text', 'placeholder': 'Phone'|trans }}) }}
                    </div>

                    <div class="col-sm-6 col-md-6">
                        {{ form_label(form.zone,  'Zone'|trans, {'label_attr': {'class': 'form-label', 'for': 'floatingInputZone'}}) }}
                        {{ form_widget(form.zone, { 'attr': { 'class': 'form-control', 'id':'floatingInputZone', 'type':'text', 'placeholder': 'Zone'|trans }}) }}
                    </div>

                    <div class="col-sm-6 col-md-6">
                        <div class="inner-addon right-addon">
                            <div class="uil fs-0 me-2 uil-eye" style="cursor: pointer; margin-top: 22px;" onclick="toggle_password(this)"></div>
                            {{ form_label(form.plainPassword.first,  'password'|trans, {'label_attr': {'class': 'form-label', 'for': 'passwordInput'}}) }}
                            {{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'form-control', 'id':'passwordInput' ,  'placeholder': 'password'|trans }}) }}
                            <div class="invalid-feedback" style="display: block !important">{{ form_errors(form.plainPassword.first) }}</div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6">
                        <div class="inner-addon right-addon">
                            <div class="uil fs-0 me-2 uil-eye" style="cursor: pointer; margin-top: 22px;" onclick="toggle_password(this)"></div>
                            {{ form_label(form.plainPassword.second,  'Repeat password'|trans, {'label_attr': {'class': 'form-label', 'for': 'repeatPasswordInput'}}) }}
                            {{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'form-control border-right-0', 'id':'repeatPasswordInput', 'placeholder': 'password'|trans }}) }}
                            <div class="invalid-feedback" style="display: block !important">{{ form_errors(form.plainPassword.second) }}</div>
                        </div>
                    </div>

                    <div class="col-12 gy-6">
                        <div class="row g-3 justify-content-end">
                            <div class="col-auto">
                                <a href="{{ path('app_driver') }}" class="btn btn-phoenix-primary px-5">{{ 'Cancel' |trans }}</a>
                        </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary px-5">{{ 'Save' |trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>