<table class="table table-sm fs--1 mb-0">
    <thead>
        <tr>
            <th class="sort align-middle" scope="col" data-sort="code" style="width:10%; min-width:200px;">
                {{ 'Email' |trans }}
            </th>
            <th class="align-middle" scope="col" style="width:20%;  min-width:200px;">
                {{ 'Actions' |trans }}
            </th>
        </tr>
    </thead>
    <tbody class="list" id="members-table-body">
        {% for entity in entities %}
            <tr class="hover-actions-trigger btn-reveal-trigger position-static">
                <td class="email align-middle white-space-nowrap">
                    <a class="fw-semi-bold" href="mailto:{{ entity.email }}">
                        {{ entity.email }}
                    </a>
                </td>
                <td class="actions align-middle white-space-nowrap">
                    <a class="m-2" href="{{ path('app_shipper_edit', { shipperEntity: entity.id }) }}" data-original-title="Edit" data-toggle="tooltip">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="{{ path('app_shipper_delete', { shipperEntity: entity.id }) }}" data-original-title="Remove" data-toggle="tooltip">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
