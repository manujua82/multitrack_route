{% extends 'simpleBase.html.twig' %}

{% block title %}{{'Reset your password' | trans}}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="col-sm-10 col-md-8 col-lg-5 col-xxl-4">
        <a class="d-flex flex-center text-decoration-none mb-4" href="{{ path('app_index')}}">
            <div class="d-flex align-items-center fw-bolder fs-5 d-inline-block">
                <img src="{{ asset('assets/img/icons/logo.png') }}" alt="phoenix" width="58" />
            </div>
        </a>
        <div class="px-xxl-5">
            <div class="text-center mb-6">
                <h4 class="text-1000">{{'Forgot password' | trans }}</h4>
                <p class="text-700 mb-5">{{'Enter email recovery' | trans }}</p>
                {{ form_start(requestForm, { 'attr' : { 'class': 'd-flex align-items-center mb-5' } }) }}
                {{ form_widget(requestForm.email, { 'attr': { 'class': 'form-control flex-1', 'type':'text', 'placeholder': 'Email'|trans }}) }}
                <button class="btn btn-primary ms-2">{{'Send' | trans }}<span class="fas fa-chevron-right ms-2"></span></button>
            </div>
        </div>
        </div>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
