{% extends 'simpleBase.html.twig' %}

{% block title %}{{'Reset new pass' | trans }}{% endblock %}

{% block body %}

    <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3">
        <a class="d-flex flex-center text-decoration-none mb-4" href="{{ path('app_index')}}">
            <div class="d-flex align-items-center fw-bolder fs-5 d-inline-block">
                <img src="{{ asset('assets/img/icons/logo.png') }}" alt="phoenix" width="58" />
            </div>
        </a>
        <div class="text-center mb-6">
            <h4 class="text-1000">{{'Reset new pass' | trans }}</h4>
            <p class="text-700">{{'Type new pass' | trans}}</p>
            {{ form_start(resetForm, { 'attr' : { 'class': 'mt-5' } }) }}
            <span class="inner-addon right-addon">
                <div class="uil fs-0 me-2 uil-eye" style="cursor: pointer" onclick="toggle_password(this)"></div>
                {{ form_widget(resetForm.plainPassword.first, { 'attr': { 'class': 'form-control mb-2', 'placeholder': 'Type new pass'|trans }}) }}
            </span>
            <span class="inner-addon right-addon">
                <div class="uil fs-0 me-2 uil-eye" style="cursor: pointer; right: -232px;" onclick="toggle_password(this)"></div>
                {{ form_widget(resetForm.plainPassword.second, { 'attr': { 'class': 'form-control mb-4', 'placeholder': 'Confirm new pass'|trans }}) }}
            </span>
            <button class="btn btn-primary w-100" type="submit">{{'Set pass' | trans }}</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
