 <div 
    {{ stimulus_controller('route-dashboard', {
        routeSelectedId: routeSelectedId
    }) }}
> 
        <div class="home-vertical-wrapper">
            <div id="route-panel"class="bg-soft overflow-auto home-vertical-panel home-empty-panel fs--1 mb-0">
                <div class="d-flex flex-row align-items-center justify-content-between" >
                <div class="d-flex align-items-center flex-row">
                    <div class="fw-bold me-4 px-2 pt-2 pb-2">{{'Routes'| trans}}</div>
                    <input class="form-control form-control-sm me-4" placeholder="Search Routes"|trans />
                    <select class="me-4" id="organizerSingle" >
                        <option>{{ 'This week  ' | trans }}</option>
                        <option>{{ 'Today      ' | trans }}</option>
                        <option>{{ 'Yesterday  ' | trans }}</option>
                        <option>{{ 'Next 7 days' | trans }}</option>
                    </select>
                </div>
                
                <div  
                    {{ stimulus_controller('modal-form', {
                        formUrl: path('app_route_new'),
                        loadingText:  'Loading'|trans
                    })}}
                    data-action="hidden.bs.modal->modal-form#modalHidden"
                >
                    <a 
                        class="btn btn-soft-primary btn-sm me-4"
                        data-action="modal-form#openModal"
                    >
                        <span class="fas fa-route me-2"></span>
                        <span>{{ 'New Route' | trans }}</span>
                    </a>
                
                    {{ include('widgets/_homeModal.html.twig', {
                        modalTitle: "Add Route"|trans
                    }) }}
                </div> 
                </div>
            
                {{ include('home/_routeList.html.twig') }}
            </div>
            
            <div id="route-address-panel" class="bg-soft home-vertical-panel home-relative-panel fs--1 mb-0">
                <div class="bg-soft d-flex align-items-center flex-row">
                    <div class="fw-bold me-4 px-2 pt-2 pb-2">{{'Sites'| trans}}</div>
                    <a class="btn btn-soft-primary btn-sm me-4 ">
                        <span class="fas fa-route me-2"></span>
                        <span>{{ 'Optimize' | trans }}</span>
                    </a>
                    <a class="btn btn-soft-primary btn-sm me-4">
                        <span class="fas fa-clock me-2"></span>
                        <span>{{ 'Calculate ETA' | trans }}</span>
                    </a>
                </div>
                {{ include('home/_routeAddresses.html.twig') }}

                <div id="route-address-gutter" class="home-vertical-gutter"></div>
            </div>

            
            <div id="route-order-panel" class="bg-soft home-order-panel home-relative-panel fs--1 mb-0">  
                <div class="bg-soft d-flex align-items-center flex-row px-2 pt-2 pb-2">
                    <div class="fw-bold me-4">{{'Orders'| trans}}</div>
                </div>
                {{ include('home/_orderList.html.twig', {
                        targetName: "routeOrders",
                        entities: routeOrders
                }) }}
                <div id="address-order-gutter" class="home-vertical-gutter"></div>
            </div>
        </div>
</div>